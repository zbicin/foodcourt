@{
    ViewBag.Title = "Food Court";
}

<div class="row">
    <div class="col-xs-12 col-md-8 col-md-offset-2 col-lg-6 col-lg-offset-3 text-center">
        <form>
            <div class="form-group">
                <input type="email" class="form-control" placeholder="Your email" />
            </div>
            <div class="form-group">
                <input type="text" class="form-control" placeholder="Emails of people to invite" />
            </div>
            <div class="form-group">
                <input type="text" class="form-control" placeholder="Group name" />
            </div>
            <p>
                <a href="@Url.Action("Index", "Order")" class="btn btn-success btn-lg">
                    Create
                </a>
            </p>
            <p>
                or
                <a href="@Url.Action("LogIn", "Account")">log in to an existing poll</a>.
            </p>
        </form>
    </div>
</div>
